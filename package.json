  },
  "repository": {
    "type": "git",
    "url": "http://github.com/sebbo2002/node-pyatv.git"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "mocha": "^5.2.0",
    "mochawesome": "^3.1.1",
    "npm-check": "^5.9.0",
    "nyc": "^13.1.0"
  },
  "peerDependencies": {
    "@types/node": ">= 8.0.0"
  },
  "scripts": {
    "all": "npm run check && npm run tests",
    "check": "npm run check:eslint && npm run check:npm && npm run check:nsp",
    "check:eslint": "eslint ./examples ./src ./test",
    "check:quick": "npm run check:eslint",
    "check:nsp": "npm_config_audit_level=moderate npm audit",
    "check:npm": "npm-check -s",
    "tests": "npm run test && npm run coverage",
    "test": "mocha -c --reporter mochawesome --reporter-options reportDir=test-result/test,reportFilename=report,json=false ./test/*.js",
    "coverage": "nyc --reporter=html --reporter=text --report-dir ./test-result/coverage --check-coverage mocha -c ./test/*.js",
    "bump": "jq -M \".version=\\\"$CI_COMMIT_TAG\\\"\" package.json|sponge package.json"
  },
  "preferGlobal": false,
  "main": "./src/index.js"
}
